<form method="post" action="/articles/<%= @article.id %>" >
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label>Title: <input type="string" name="article[title]" id="title" value="<%= @article.title %>"/></label><br/><br/>
    <label>Content: <input type="string" name="article[content]" id="content" value="<%= @article.content %>"/></label><br/><br/>
    <input type="submit" value="submit" id="Submit">

</form>